generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int       @id @default(autoincrement())
  roleId    Int       @default(1)
  userName  String
  email     String    @unique
  password  String
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  role      Role      @relation(fields: [roleId], references: [code])
  sessions  Session[]

  @@map("users")
}

model Session {
  deviceId   Int     @id @default(autoincrement())
  userId     Int?
  exp        Int?
  ip         String?
  deviceName String?
  iat        Int?
  customer   User?   @relation(fields: [userId], references: [id])

  @@map("sessions")
}

enum RoleTitle {
  ADMINISTRATOR
  CUSTOMER
}

model Role {
  id          Int       @id @default(autoincrement())
  code        Int       @unique
  name        RoleTitle @default(CUSTOMER)
  description String
  users       User[]

  @@map("role")
}

model Payment {
  id         Int           @id @default(autoincrement())
  orderId    Int
  total      Float
  customerId Int
  provider   String
  status     PaymentStatus @default(PENDING)
  createdAt  DateTime      @default(now())
  updatedAt  DateTime      @updatedAt

  @@map("payment")
}

enum PaymentStatus {
  PENDING
  SUCCESSFUL
  FAILED
}
